<body>
  <button id="clickButton" style="-webkit-text-stroke: 1px white; text-shadow: white 0 0 9px;">Click Me to start!</button>
  <div id="countDisplay" style="color:transparent; text-transform: uppercase; -webkit-text-stroke: 1px purple; text-shadow: purple 0 0 8px">Count: 0</div>
  <div id = "perSecondDisplay" style="color:transparent; text-transform:uppercase; -webkit-text-stroke: 1px navy; text-shadow: navy 0 0 8px" >Per Second: 0</div>
  <button id="upgradeButton">Buy +1/second (Cost: 10)</button>

  <script>
    let count = 0;
    let perSecond = 0;
    const button = document.getElementById("clickButton");
    const display = document.getElementById("countDisplay");
    const perSecondDisplay = document.getElementById("perSecondDisplay");
    const upgradeButton = document.getElementById("upgradeButton");

    button.addEventListener("click", function() {
      count++;
      display.textContent = "Count: " + count;
    });

    setInterval(function(){
        count += perSecond;
        display.textContent = "Count: " + count;
    }, 1000);

    upgradeButton.addEventListener("click", function(){
        if(count >= 10){
            count -= 10;
            perSecond++;
            display.textContent = "Count: " + count;
            perSecondDisplay.textContent = "Per Second: " + perSecond;
        }

    });
  </script>
</body>
</html>
<script>
    let count = 0;
    let perSecond = 0;
    const button = document.getElementById("clickButton");
    const display = document.getElementById("countDisplay");
    const perSecondDisplay = document.getElementById("perSecondDisplay");
    const upgradeButton = document.getElementById("upgradeButton");

    button.addEventListener("click", function() {
      count++;
      display.textContent = "Count: " + count;
    });

    setInterval(function(){
        count += perSecond;
        display.textContent = "Count: " + count;
    }, 1000);

    upgradeButton.addEventListener("click", function(){
        if(count >= 10){
            count -= 10;
            perSecond++;
            display.textContent = "Count: " + count;
            perSecondDisplay.textContent = "Per Second: " + perSecond;
        } else {
            alert("Not enough points!"); //added alert
        }

    });
  </script>
